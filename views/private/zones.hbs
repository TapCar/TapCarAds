<script src='https://api.tiles.mapbox.com/mapbox-gl-js/v0.53.1/mapbox-gl.js'></script>
<link href='https://api.tiles.mapbox.com/mapbox-gl-js/v0.53.1/mapbox-gl.css' rel='stylesheet' />

<section class="uk-section-small">
  <div class="uk-container uk-container-large">
    <div id='map' style='width: 100%; height: 450px;'></div>
    {{#if err}}
    <div class="uk-alert-danger uk-width-1-3 uk-margin-auto uk-text-center" uk-alert>
      <p>{{err}}</p>
    </div>
    {{/if}}
    <div class="uk-flex uk-flex-center uk-margin">
      <a href="/zones/new" class="uk-button uk-button-primary" style="background-color:#9b59b6; border-radius: 20px">Add a Zone</a>
    </div>
  </div>
</section>
    

<script src="/javascripts/ZoneHandler.js"></script>
<script>
  {{!-- Handle Bars process to retrieve ids --}}
  let ids = [];
  {{#each zones as | zone |}}
    ids.push("{{zone.id}}");
  {{/each}}
</script>
<script src="/javascripts/zonesView.js"></script>