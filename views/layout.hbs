<body>
  <nav {{#if user}} class="uk-navbar-container uk-light" {{else}} class="uk-navbar-container uk-dark" style="background-color:transparent"{{/if}} uk-navbar="mode: click" style="background-color:black">
    {{#if user}}
      <div class="uk-navbar-left">
        <ul class="uk-navbar-nav">
        
        <li {{#ifCond route "/dashboard"}} class="uk-active" {{/ifCond}}>
          <a href="/dashboard">Dashboard</a>
        </li>
        <li {{#ifCond route "/zones"}} class="uk-active" {{/ifCond}}>
          <a href="/zones">Zones</a>
        </li>
        <li {{#ifCond route "/analytics"}} class="uk-active" {{/ifCond}}>
          <a href="#">Analytics</a>
        </li>
        </ul>
                </div>
        {{else}}
        <div class="uk-navbar-left">
        <ul class="uk-navbar-nav">
        <li>
          <a href="#" id="landing_logo" class="uk-navbar-item uk-logo"></a>
        </li>
        </ul>
        </div>
        {{/if}}
    <div class="uk-navbar-right">
      <ul class="uk-navbar-nav">
        {{#if user}}
        <li>
          <span class="uk-form-icon" uk-icon="icon: con"></span>
        </li>
        {{else}}
        {{/if}}
        <li>
          <a href="#">{{#if user}} {{user.name}} {{else}}Enter{{/if}}</a>
          <div class="uk-navbar-dropdown">
            <ul class="uk-nav uk-navbar-dropdown-nav">
              <li class="uk-active">
                {{#if user}}
                <a href="/dashboard/{{user._id}}/edit">My account</a>
                {{else}}
                <a href="/auth/login">Sign In</a>
                {{/if}}
              </li>
              <li class="uk-nav-divider"></li>
              <li>
                {{#if user}}
                <a href="/auth/logout">Logout</a>
                {{else}}
                <a href="/auth/register">Create account</a>
                {{/if}}
              </li>
            </ul>
          </div>
        </li>
      </ul>
    </div>
  </nav>

